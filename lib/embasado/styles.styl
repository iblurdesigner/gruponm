test(color=red)
	border solid 1px color

titulos()
	color #5BB2E8
	font-size 2rem
	text-align center	
	
subtitulos()
	color #5BB2E8
	font-size 1.1rem
	text-align center
body
	background #C9D1D6 !important	
	display flex
	justify-content center
		
.Total
	background-image url('../images/fondoInterna.jpg')
	background-repeat no-repeat
	width 1020px
	test(red)
		
	.Main-menu
		display flex
		justify-content space-between
		align-items center
		width 100%
		height 90px
		test(pink)
		
		&_logoB
			margin-left 2rem
			width 70px
			test(red)
		
		&_list
			display flex
			justify-content space-around
			align-items center
			margin 0 1rem 0 2rem
			padding 0
			height 50px
			test(yellow)
		
	.menu_items
		font-size .8rem
		height auto	
		margin 0
	
	.Encabezado
		color white
		display flex
		justify-content flex-end
		width 58%
		test(yellow)
		
	.Encabezado h2	
		font-size 2rem
		line-height 1.8rem
		margin: 0 0 .5rem 0
			
	.Embasado
		display flex
		justify-content space-around
		height auto
		width 100%
		test(red)
		
		&-list
			background rgba(0,0,0,0.8)
			border solid 3px #00FFFF
			font-size .9rem
			height 340px
			line-height 2rem
			width 38%
			
		&-list ul
			padding 0 1rem	
			
		&-list_link
			color white	
		
		&-info
			color white
			width 48%
			test(peru)
			
		&-info h1	
			font-size 1.2rem
			margin-bottom 0

		&-info li
			color black
			
	.Maquinaria
		display flex
		justify-content center
		flex-wrap wrap
		height 500px
		width 100%
		test blue
		
		&-list
			background white
			border solid 3px #00FFFF
			font-size .9rem
			height 340px
			line-height 2rem
			width 38%
			test(pink)
			
		&-gallery
			display flex
			justify-content center
			background-image url('../images/recuadroGal.png')	
			background-size contain
			background-repeat no-repeat
			width 58%
			test(brown)
			
		&-gallery_items
			width 222px
			height 80%
			background-size contain	
			
	.Maquinaria h2
		color #137CB9
		width 100%
		height 50px
		margin 1.5rem 0 0 0
		text-align center
		test(green)
		
	.Footer
		display flex
		justify-content center
		flex-wrap wrap
		background black
		width 100%
		height 330px
		
		&-layout
			display flex
			justify-content center
			justify-content space-between
			width 95%
			height 250px
		
		&-titulos, &-texto
			color white
				
		&-texto
			font-size .6rem

		&-layout_col
			width 250px	
		
		&-layout_copy
			display flex
			
		&-layout_copy p
			color white
		
		.linkGNM
			color white			